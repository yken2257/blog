import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!DOCTYPE html>
<html lang="ja">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header title={SITE_TITLE} />
		<main>
			<div class="mb-4">
				<img class="object-cover w-fit" src="/hero.jpg" alt=""/>
			</div>
			<h1>Shiro space</h1>
			<p>
				とあるエンジニアの備忘録です。
			</p>
		</main>
		<Footer />
	</body>

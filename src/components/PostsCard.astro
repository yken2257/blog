---
import FormattedDate from './FormattedDate.astro'; 

export interface Props {
	date: Date;
	slug: string;
	title: string;
	description: string;
}

const { date, slug, title, description } = Astro.props;
---

<div class="rounded-md overflow-hidden border border-gray-200 my-4">
  <div class="px-4 py-3">
    <div class="font-bold text-xl mb-1 hover:underline">
		<a class="text-gray-900" href={`/blog/${slug}/`}>
			{title}
		</a>
	</div>
	<p class="text-gray-500 text-base mb-2">
		<i class="fa-regular fa-clock"></i>
		<FormattedDate date={date} />
    <p class="text-gray-800 text-base">
      {description}
    </p>
  </div>
</div>